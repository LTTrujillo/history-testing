<h1>Home_page</h1>

<h2>Room Types</h2>

<%= link_to 'New Room Type', new_room_type_path %>
 
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>
 
  <% @room_types.each do |room_type| %>
    <tr>
      <td><%= room_type.name %></td>
      <td><%= room_type.description %></td>
      <td><%= link_to 'Show', room_type_path(room_type) %></td> 
      <td><%= link_to 'Edit', edit_room_type_path(room_type) %></td> 
      <td><%= link_to 'Destroy', room_type_path(room_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<hr>


<h2>Rooms</h2>

<%= link_to 'New Room', new_room_path %> </br>
 
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>
 
  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.name %></td>
      <td><%= room.description %></td>
      <td><%= link_to 'Show', room_path(room) %></td> 
      <td><%= link_to 'Edit', edit_room_path(room) %></td>
      <td><%= link_to 'Destroy', room_path(room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
