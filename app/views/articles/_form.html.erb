
<%= form_with model: @article, local: true do |form| %>
 
 
 
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>


  

  
  <p>
    <%= form.submit %>
  </p>

 

<% end %>
 
  <hr/>

    <h2>Comments</h2>
    <%= render @article.comments %>
    
    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
   
  <hr/>





